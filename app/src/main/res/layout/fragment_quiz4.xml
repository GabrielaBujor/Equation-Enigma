<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background">

    <!-- Quiz Title -->
    <TextView
        android:id="@+id/quizTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz 4"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

    <!-- Timer TextView -->
    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Function TextViews with added margin for spacing -->
            <TextView
                android:id="@+id/function1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="f(x) = lg x"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/function2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="f(x) = sqrt(2x+1)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/function3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="f(x) = ln x"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/function4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="f(x) = sqrt(x^3)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Graph ImageViews -->
            <ImageView
                android:id="@+id/graph1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/graph43"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/graph2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/graph41"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/graph3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/graph44"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/graph4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/graph42"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Back to Main Page Button -->
    <Button
        android:id="@+id/backToMainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to main page"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:onClick="onBackToMainClicked"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="35dp"/>
</LinearLayout>
